generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CategoryType {
  Category_1
  Category_2
  Category_3
  Category_4
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products{
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  category          CategoryType  
  cover           String
  description String
  price           String
  solde    Boolean 
  BestSeller Boolean
}



